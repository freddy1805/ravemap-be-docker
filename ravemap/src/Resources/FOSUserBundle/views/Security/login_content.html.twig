{% trans_default_domain 'FOSUserBundle' %}


<main class="form-signin">
    <img class="mb-4 login-logo" src="{{ asset('img/logo/logo_small.png') }}" alt="">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <h1 class="h3 mb-3 fw-normal">{{ 'login.headline'|trans({}, 'messages') }}</h1>

        <div class="form-floating">
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="{{ 'login.user.name'|trans({}, 'messages') }}" required="required" autocomplete="username" />
            <label for="floatingInput">{{ 'login.user.name'|trans({}, 'messages') }}</label>
        </div>
        <div class="form-floating">
            <input type="password" id="password" class="form-control" name="_password" required="required" placeholder="{{ 'login.user.password'|trans({}, 'messages') }}" autocomplete="current-password" />
            <label for="floatingPassword">{{ 'login.user.password'|trans({}, 'messages') }}</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> {{ 'login.user.remember'|trans({}, 'messages') }}
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">{{ 'login.user.submit'|trans({}, 'messages') }}</button>
        <p class="mt-5 mb-3 text-muted">&copy; rav3map 2021</p>
    </form>
</main>
